<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net6.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
    <PackageVersion>$(VersionPrefix)</PackageVersion>
    <RootNamespace>SteamB23.EncodeToUTF8</RootNamespace>
    <Version>1.0.0</Version>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft-Windows10-APICodePack-ShellExtensions" Version="1.1.8" />
    <PackageReference Include="UTF.Unknown" Version="2.5.1" />
  </ItemGroup>

  <ItemGroup>
    <Resource Include="SplashImage\0.png" />
    <Resource Include="Profile.png" />
    <None Remove="SplashImage\1.png" />
    <Resource Include="SplashImage\1.png" />
    <None Remove="SplashImage\2.png" />
    <Resource Include="SplashImage\2.png" />
  </ItemGroup>

</Project>
